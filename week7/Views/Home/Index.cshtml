@model IEnumerable<week7.Repository.Entity.Emp2>

@{
    ViewBag.Title = "Employee Details";
}
<style>
    .s1 {
        margin-left: 425px;
    }

    .head {
        text-align: center;
    }
</style>

<h2 class="head">Employee Details</h2>



<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaritalStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            Action
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaritalStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-link" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-link" }) |

                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-link" })

            </td>
        </tr>
    }

</table>
<p class="s1">
    @Html.ActionLink("Create New ", "Create", null, new { @class = "btn btn-primary btn-large" })

</p>
